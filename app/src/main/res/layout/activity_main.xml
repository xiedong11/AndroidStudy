<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LinearLayout" />

        <Button
            android:id="@+id/btn_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View" />

        <Button
            android:id="@+id/btn_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTIFICATION" />

        <Button
            android:id="@+id/btn_flutter_aar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FLUTTER_AAR" />

        <Button
            android:id="@+id/btn_annotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANNOTATION_TEST" />

        <Button
            android:id="@+id/btn_aop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AOP_TEST" />

        <Button
            android:id="@+id/btn_Rxjava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rxjava" />
        <Button
            android:id="@+id/btn_second_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APP二楼" />

        <Button
            android:id="@+id/btn_thread_pool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线程池" />

        <Button
            android:id="@+id/btn_proxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="代理模式" />


        <Button
            android:id="@+id/btn_green_dao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GreenDao" />

        <Button
            android:id="@+id/btn_drag_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列表拖拽排序" />

    </LinearLayout>
</ScrollView>